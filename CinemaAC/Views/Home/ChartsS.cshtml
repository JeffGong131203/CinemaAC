
@{
    ViewBag.Title = "施耐德温度趋势";

    Dictionary<string, string[]> dicData = ViewBag.dicData;

    Layout = "~/Views/Shared/_LayoutContent.cshtml";
}
<div class="row">
    <div class="col-md-10">
        <div id="main" style="width:100%;height:400px"></div>
    </div>
    <script type="text/javascript">

        // 基于准备好的dom，初始化echarts实例
        var myChart = echarts.init(document.getElementById('main'));

        var xAxisData = @Html.Raw(@ViewBag.arrayX);

        var data1 = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(dicData["1"]));
        var data2 = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(dicData["2"]));
        var data3 = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(dicData["3"]));
        var data4 = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(dicData["4"]));
        var data5 = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(dicData["5"]));
        var data6 = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(dicData["6"]));
        var data7 = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(dicData["7"]));


        option = {
            //title: {
            //    text: '施耐德空调温度趋势'
            //},
            tooltip: {
                trigger: 'axis'
            },
            legend: {
                data: ['S1', 'S2', 'S3', 'S4', 'S5','S6','S7']
            },
            grid: {
                left: '3%',
                right: '4%',
                bottom: '3%',
                containLabel: true
            },
            //toolbox: {
            //    feature: {
            //        saveAsImage: {}
            //    }
            //},
            xAxis: {
                type: 'category',
                boundaryGap: false,
                data: xAxisData
            },
            yAxis: {
                type: 'value',
                max:50
            },
            series: [
                {
                    name: 'S1',
                    type: 'line',
                    stack: '温度',
                    data: data1
                },
                {
                    name: 'S2',
                    type: 'line',
                    stack: '温度',
                    data: data2
                },
                {
                    name: 'S3',
                    type: 'line',
                    stack: '温度',
                    data: data3
                },
                {
                    name: 'S4',
                    type: 'line',
                    stack: '温度',
                    data: data4
                },
                {
                    name: 'S5',
                    type: 'line',
                    stack: '温度',
                    data: data5
                },
                {
                    name: 'S6',
                    type: 'line',
                    stack: '温度',
                    data: data6
                },
                {
                    name: 'S7',
                    type: 'line',
                    stack: '温度',
                    data: data7
                }
            ]
        };
        // 使用刚指定的配置项和数据显示图表。
        myChart.setOption(option);
    </script>
</div>



